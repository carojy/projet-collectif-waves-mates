<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="26sp"
    android:gravity="center_horizontal"
    tools:context=".SpotActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spot_activity_name"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="35dp" />
    
    <ImageView
        android:layout_width="320sp"
        android:layout_height="280sp"
        android:src="@drawable/spot_picture"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spot_activity_location"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/backgroundText"
        android:layout_margin="5sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entre le dauphin vert et le cocotier assassin"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/backgroundText"
        android:layout_margin="5sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niveau 5"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/backgroundText"
        android:layout_marginTop="2sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAGNIFIQUE\nPeut-être le plus beau spot de surf !\nAttention cependant, surfer près de coraux c'est sympa mais dangereux\nDébutants s'abstenir"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/backgroundText"
        android:background="@color/boxComponentBackground"
        android:padding="5sp"
        android:layout_marginTop="27sp"
        android:layout_marginBottom="18sp"/>
    
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Retour à la liste"
        android:textSize="18sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/buttonText"
        android:backgroundTint="@color/buttonBackground"/>
</LinearLayout>